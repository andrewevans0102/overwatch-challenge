{
  "name": "overwatch-challenge",
  "version": "1.0.0",
  "description": "Open Source project teams can use to gamify their learning experiences",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "frontend-build": "cd frontend; npm run prod-build",
    "frontend-install": "cd frontend; npm install",
    "frontend-serve": "cd frontend; ng serve",
    "frontend-lint": "cd frontend; npm run lint",
    "frontend-test": "cd frontend; npm run prod-test",
    "frontend-deploy": "cd frontend; npm run prod-deploy",
    "frontend-install-node-sass": "cd frontend; npm install node-sass",
    "frontend-rebuild-node-sass": "cd frontend; npm rebuild node-sass",
    "frontend-cypress-test": "cd frontend; npm run cypress-test",
    "frontend-cypress-run": "cd frontend; npm run prod-cypress",
    "frontend-cypress-install": "cd frontend; npm run cypress-install",
    "environment-variables": "python scripts/environment_variables.py $OC_apiKey $OC_authDomain $OC_databaseURL $OC_projectId $OC_storageBucket $OC_messageSenderId $OC_slack1 $OC_slack2 $cypress_test_user_email $cypress_test_user_password $cypress_test_user_first_name $cypress_test_user_last_name",
    "functions-serve": "cd functions; firebase serve --only functions",
    "functions-deploy": "cd functions; npm run deploy",
    "functions-install": "cd functions; npm install",
    "code-coverage": "cd frontend; npm run delete-coverage; npm run coverage-report",
    "prod-deploy": "firebase deploy",
    "docs-build": "cd docs; mkdocs build",
    "docs-deploy": "cd docs; mkdocs gh-deploy -m \"[ci skip]\""
  },
  "author": "Andrew Evans",
  "license": "MIT"
}
